<body>
    <h1>Triangle Calculator</h1>
    <p>Enter the values of two angles and a side of the triangle to calculate the remaining values.</p>
    <label for="angleA">Angle A (degrees):</label>
    <input type="number" id="angleA">
    <br>
    <label for="sidea">Side a (cm):</label>
    <input type="number" id="sidea">
    <br>
    <label for="angleB">Angle B (degrees):</label>
    <input type="number" id="angleB">
    <br>
    <button onclick="calculateTriangle()">Calculate</button>
    <br>
    <div id="result"></div>

    <script>
        function calculateTriangle() {
            var A = parseFloat(document.getElementById('angleA').value);
            var a = parseFloat(document.getElementById('sidea').value);
            var B = parseFloat(document.getElementById('angleB').value);

            var C = 180 - A - B;
            var b = ((a * Math.sin(toRadians(B))) / Math.sin(toRadians(A))).toFixed(2);
            var c = ((a * Math.sin(toRadians(C))) / Math.sin(toRadians(A))).toFixed(2);

            document.getElementById('result').innerHTML = `
                <p>The remaining values are:</p>
                <p>b = ${b} cm</p>
                <p>C = ${C}Â°</p>
                <p>c = ${c} cm</p>
            `;
        }

        function toRadians(degrees) {
            return degrees * Math.PI / 180;
        }
    </script>
</body>
